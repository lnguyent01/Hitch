<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chub45.benson.hitch">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity
            android:name=".AddPostActivity"
            android:label="AddPostActivity" />
        <activity
            android:name=".NavigationActivity"
            android:label="NavigationActivity" />
        <activity
            android:name="chub45.benson.hitch.PostDetails"
            android:label="Details">
        </activity>
        <activity
            android:name="chub45.benson.hitch.MyPostDetails"
            android:label="Details">
        </activity>
        <activity
            android:name="chub45.benson.hitch.AcceptedPostDetails"
            android:label="Details">
        </activity>
        <activity
            android:name="chub45.benson.hitch.ChoosePosts"
            android:label="Choose Posts">
        </activity>
        <activity
            android:name="chub45.benson.hitch.MyPostsActivity"
            android:label="My Posts">
        </activity>
        <activity
            android:name="chub45.benson.hitch.AcceptedPostsActivity"
            android:label="Posts I've Been Accepted To">
        </activity>
    </application>

</manifest>