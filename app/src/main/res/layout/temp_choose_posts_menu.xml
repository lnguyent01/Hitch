<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/accepted_posts"
        android:layout_width="199dp"
        android:layout_height="41dp"
        android:layout_marginBottom="156dp"
        android:layout_marginEnd="106dp"
        android:layout_marginStart="106dp"
        android:adjustViewBounds="false"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/acceptedrides" />

    <ImageButton
        android:id="@+id/requested_posts"
        android:layout_width="199dp"
        android:layout_height="41dp"
        android:layout_marginBottom="248dp"
        android:layout_marginEnd="106dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="88dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/accepted_posts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_posts"
        app:srcCompat="@drawable/requestedrides" />

    <ImageButton
        android:id="@+id/my_posts"
        android:layout_width="199dp"
        android:layout_height="41dp"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="106dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="152dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/requested_posts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/myposts" />
</android.support.constraint.ConstraintLayout>